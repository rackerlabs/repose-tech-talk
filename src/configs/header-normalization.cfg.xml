<?xml version="1.0" encoding="UTF-8"?>

<header-normalization xmlns='http://docs.openrepose.org/repose/header-normalization/v1.0'
                      xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
                      xsi:schemaLocation='http://docs.openrepose.org/repose/header-normalization/v1.0'>
    <header-filters>
        <target>
            <blacklist id="all-requests">
                <header id="X-PP-User"/>
                <header id="X-PP-Groups"/>
            </blacklist>
        </target>
    </header-filters>
</header-normalization>
